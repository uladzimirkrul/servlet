pipeline {
    agent any

    tools {
        maven 'Maven3.8.6'
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo ${dbpath} >> ${WORKSPACE}/src/main/resources/app.properties'
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['tomcat-ssh']) {
                    sh 'scp ${WORKSPACE}/target/*.war ${tomcatpath}'
                }
            }
        }
    }
}
